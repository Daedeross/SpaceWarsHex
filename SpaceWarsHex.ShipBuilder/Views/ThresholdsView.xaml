<rxui:ReactiveUserControl x:Class="SpaceWarsHex.ShipBuilder.Views.ThresholdsView"
                          x:TypeArguments="vm:ThresholdsViewModel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:SpaceWarsHex.ShipBuilder.Views"
                          xmlns:scg="clr-namespace:System.Collections.Generic;assembly=mscorlib"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                          xmlns:vm="clr-namespace:SpaceWarsHex.ShipBuilder.ViewModels;assembly=SpaceWarsHex.ShipBuilder.ViewModels"
                          mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Label Grid.Column="0" VerticalAlignment="Center" >Create:</Label>
        <Button x:Name="CreateDefaultBtn" Grid.Column="1" Click="CreateDefaultBtn_Click">Default</Button>
        <Button x:Name="CreateLinearBtn" Grid.Column="2" Click="CreateLinearBtn_Click">Linear</Button>
        <ListView Grid.Row="1" Grid.ColumnSpan="3" Name="ThresholdsListView"
                  HorizontalAlignment="Stretch"
                  HorizontalContentAlignment="Stretch">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Threshold">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <mah:NumericUpDown Name="HullSpin"
                                                   Minimum="0"
                                                   Maximum="1"
                                                   Interval="0.01"
                                                   StringFormat="0.000"
                                                   Value="{Binding HullStrength}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Multiplier">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <mah:NumericUpDown Name="MultiplierSpin"
                                                   Minimum="0"
                                                   Maximum="1"
                                                   Interval="0.01"
                                                   StringFormat="0.000"
                                                   Value="{Binding SystemMultiplier}"
                                                   />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</rxui:ReactiveUserControl>
