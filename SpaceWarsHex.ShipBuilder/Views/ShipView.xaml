                <Button Grid.Column="0" Grid.Row="0" x:Name="AddEnergyWeaponBtn">Add Weapon</Button>
                <Button Grid.Column="1" Grid.Row="0" x:Name="DelEnergyWeaponBtn">Delete Weapon</Button>
