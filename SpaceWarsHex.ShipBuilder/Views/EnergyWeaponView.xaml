<rxui:ReactiveUserControl x:Class="SpaceWarsHex.ShipBuilder.Views.EnergyWeaponView"
                          x:TypeArguments="vm:EnergyWeaponViewModel"
                          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                          xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                          xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                          xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                          xmlns:local="clr-namespace:SpaceWarsHex.ShipBuilder.Views"
                          xmlns:scg="clr-namespace:System.Collections.Generic;assembly=mscorlib"
                          xmlns:rxui="http://reactiveui.net"
                          xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
                          xmlns:model="clr-namespace:SpaceWarsHex.Model;assembly=SpaceWarsHex.Contract"
                          xmlns:vm="clr-namespace:SpaceWarsHex.ShipBuilder.ViewModels;assembly=SpaceWarsHex.ShipBuilder.ViewModels"
                          xmlns:sys="clr-namespace:System;assembly=mscorlib"
                          mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style TargetType="mah:NumericUpDown">
            <Setter Property="HorizontalAlignment" Value="Left" />
            <Setter Property="Margin" Value="1" />
        </Style>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="FireModeValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:FireMode" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider MethodName="GetValues" ObjectType="{x:Type sys:Enum}" x:Key="TurnPhaseValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="model:TurnPhase" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0">Fire Mode</Label>
        <ComboBox Name="FireModeSelect"
                  Grid.Column="1" Grid.Row="0"
                  Grid.ColumnSpan="2"
                  Margin="1"
                  ItemsSource="{Binding Source={StaticResource FireModeValues}}"
                  />

        <Label Grid.Column="0" Grid.Row="1">Max Dice</Label>
        <mah:NumericUpDown Grid.Column="1" Grid.Row="1" Width="100" 
                           Name="MaxDiceSpin"
                           Minimum="0" Maximum="1000" />

        <Label Grid.Column="0" Grid.Row="2">Energy per Die</Label>
        <mah:NumericUpDown Grid.Column="1" Grid.Row="2" Width="100" 
                           Name="EnergyPerDieSpin"
                           Minimum="0" Maximum="1000" />

        <Label Grid.Column="0" Grid.Row="3">Max Range</Label>
        <mah:NumericUpDown Grid.Column="1" Grid.Row="3" Width="100" 
                           Name="MaxRangeSpin"
                           Minimum="0" Maximum="1000" />

        <Label Grid.Column="0" Grid.Row="4">Fire Phase</Label>
        <ComboBox Name="FirePhaseSelect"
                  Grid.Column="1" Grid.Row="4"
                  Grid.ColumnSpan="2"
                  Margin="1"
                  ItemsSource="{Binding Source={StaticResource TurnPhaseValues}}"
                  />

        <TextBlock Grid.Row="1" Grid.Column="2"
                   VerticalAlignment="Center"
                   Grid.RowSpan="1">Max Energy:</TextBlock>

        <TextBlock Grid.Row="2" Grid.Column="2"
                   VerticalAlignment="Center"
                   Grid.RowSpan="1" Name="MaxEnergyText" />

        <Button Grid.Column="0" Grid.Row="5" 
                Name="EffectsButton"
                Width="100"
                Height="30"
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                Content="Effects" />
        <CheckBox Grid.Column="1" Grid.Row="5"
                  Name="VisualCheckBox"
                  Content="Visual"
                  Margin="10"
                  VerticalAlignment="Center"
                  />

        <Border Grid.Column="3" Grid.RowSpan="7"
                BorderBrush="Black" BorderThickness="1">
            <local:WeaponEffectsView x:Name="EffectsView" />
        </Border>


        <Border Grid.Column="4" Grid.RowSpan="7"
                BorderBrush="Black" BorderThickness="1" >
            <local:ThresholdsView x:Name="ThresholdsView" />
        </Border>
    </Grid>
</rxui:ReactiveUserControl>